        </button>

        <!--Main nav bar-->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <!--Link to dashboard-->
                <li class="nav-item">
                    <a class="nav-link ${servletPath.equals('/index.jsp')?'active':''}" href="index">üè†Dashboard</a>
            </li>
            <li class="nav-item">
                <c:if test="${user!=null}">
                    <a class="nav-link ${servletPath.equals('/WEB-INF/AgentFile.jsp')?'active':''}" href="AgentFile">&#128452; Agent File(Internal Test)</a>
                </c:if>
                <%--</li>
                <li class="nav-item">
